            <a href="#" title="Example link from Weston College Website" class="top_nav_link">Staff</a>
            <a href="#" title="Example link from Weston College Website" class="top_nav_link">Safeguarding</a>
            <a href="#" title="Example link from Weston College Website" class="top_nav_link">Applicants</a>
            <a href="#" title="Example link from Weston College Website" class="top_nav_link">Enrolments</a>
            <a href="#" title="Example link from Weston College Website" class="top_nav_link">eILP</a>
            <a href="#" title="Example link from Weston College Website" class="top_nav_link">Contact</a>
        </div>
        <div class="blue_panel">
            <a class="navbar-brand" asp-area="" asp-page="/Index">
                <img class="logo" alt="Weston College Logo" src="~/images/logo.png" />
            </a>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <p class="text-center">&copy; @DateTime.Now.Year - Ashley Colman - <a href="https://github.com/AshleyColman" target="_blank" title="View my GitHub">GitHub</a> - <a href="https://linkedin.com/in/ashley-colman" target="_blank" title="View my LinkedIn">LinkedIn</a> - <a href="mailto:dev.ashley.colman@gmail.com.com">dev.ashley.colman@gmail.com</a></p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>